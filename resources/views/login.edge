<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, intial-scale=1.0">
        <link rel="stylesheet" href="./main.css">
        <title>Test css</title>
        {{style("css/reset")}}
         {{style("css/login")}}
    </head>
<body>
    <div class="container">
    <div class="content">
        <span class="hero-text">   
             Login {{name+" "+age}} 
            </span>
            @if(age >= 20)
            <h1>You are adult</h1>
            @else
            <h1>You are young</h1>
            @endif
            <ul>
            @each(friend in friends)
              <li>{{friend}}</li>
            @endeach
        </ul>
        <p>{{address.postcode.country}}</p>
    </div>
</div>
</body>
</html>